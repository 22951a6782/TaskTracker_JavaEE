package servlets;

import java.io.IOException;
import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;
import beans.Task;
import dao.ToDoDAO;
import dao.ToDoDAOImpl;

@WebServlet("/AddTaskServlet")
public class AddTaskServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    public void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        response.setContentType("text/html");
        HttpSession session = request.getSession();

        // Ensure user is logged in
        Integer regId = (Integer) session.getAttribute("regId");
        if (regId == null) {
            response.getWriter().println("Error: User not logged in.");
            return;
        }

        // Retrieve form parameters
        String taskName = request.getParameter("taskName").trim();
        String taskDate = request.getParameter("taskDate").trim();
        int taskStatus = Integer.parseInt(request.getParameter("taskStatus").trim());

        // Create task object
        Task task = new Task(0, taskName, taskDate, taskStatus, regId);

        // DAO operation
        ToDoDAO dao = ToDoDAOImpl.getInstance();
        boolean flag = dao.addTask(task, regId);

        if (flag) {
            response.sendRedirect("viewtasks.jsp");  // Redirect instead of forward
        } else {
            response.getWriter().println("Error: Task could not be added.");
        }
    }
}
