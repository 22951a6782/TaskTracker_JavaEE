package servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import dao.ToDoDAO;
import dao.ToDoDAOImpl;

@WebServlet("/MarkTaskCompletedServlet")
public class MarkTaskCompletedServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        response.setContentType("text/html");
        PrintWriter out = response.getWriter();
        HttpSession session = request.getSession();
        ServletContext context = getServletContext();

        // Retrieve regId from session
        Integer regId = (Integer) session.getAttribute("regId");
        if (regId == null) {
            out.println("Error: User not logged in.");
            return;
        }

        // Retrieve taskId and validate it
        String taskIdStr = request.getParameter("taskId");
        if (taskIdStr == null || taskIdStr.isEmpty()) {
            out.println("Error: Task ID is missing.");
            return;
        }

        int taskId;
        try {
            taskId = Integer.parseInt(taskIdStr);
        } catch (NumberFormatException e) {
            out.println("Error: Invalid Task ID.");
            return;
        }

        // Debugging logs
        System.out.println("Marking task as completed...");
        System.out.println("Reg ID: " + regId);
        System.out.println("Task ID: " + taskId);

        // Database operation
        ToDoDAO dao = ToDoDAOImpl.getInstance();
        boolean flag = dao.markTaskCompleted(regId, taskId);

        if (flag) {
            context.getRequestDispatcher("/ViewTasks.jsp").forward(request, response);
        } else {
            out.println("Transaction Failed: Task not marked.");
        }
    }
}
